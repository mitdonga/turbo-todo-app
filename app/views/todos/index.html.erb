<p style="color: green"><%= notice %></p>

<div class="title">
  <h1>Todos</h1>
  <%= link_to "New todo", 
      new_todo_path,
      data: {turbo_frame: "new_todo"} %>
</div>

<%= turbo_frame_tag "new_todo" %>

<%= turbo_frame_tag "all_todos" do %>
  <div id="todos">
    <% @todos.each do |todo| %>
      <%= render todo %>
    <% end %>
  </div>
<% end %>

